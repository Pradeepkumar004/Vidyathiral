/**
 * Build Optimization Configuration
 * 
 * This file contains environment variables that optimize the build process
 * Add these to your build command or CI/CD pipeline
 */

// Disable source maps in production (reduces build size significantly)
GENERATE_SOURCEMAP=false

// Inline runtime chunk for better caching
INLINE_RUNTIME_CHUNK=false

// Image optimization
IMAGE_INLINE_SIZE_LIMIT=10000

// Build output customization
BUILD_PATH=build

// Enable CSS modules for better scoping
CSS_MODULES=true

// Performance budgets (warnings if exceeded)
// WARN: bundle size > 244kb (244 * 1024)
// ERROR: bundle size > 488kb (488 * 1024)
